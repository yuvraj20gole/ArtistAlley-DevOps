pipeline {
    agent any

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                echo 'Checkout completed'
            }
        }

        stage('Build') {
            steps {
                echo 'Build completed'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Test executed successfully" > test-result.txt'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                mkdir -p deployed_files
                cp test-result.txt deployed_files/
                '''
            }
        }
    }
}
