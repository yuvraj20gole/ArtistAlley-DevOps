pipeline {
    agent any

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
                echo 'Checkout completed'
            }
        }

        stage('Build') {
            steps {
                echo 'Build completed'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "This is a Test" > test-result.txt'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                mkdir -p /usr/local/var/www
                cp test-result.txt /usr/local/var/www/
                '''
            }
        }
    }
}

